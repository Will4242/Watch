<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:background="@color/background"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        android:padding="16dp">

        <TextView
            android:id="@+id/watchTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            tools:text="A Title" />

        <ImageView
            android:id="@+id/imageIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/change_watch_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/watchDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/watchTitle"
            tools:text="A Description" />

        <TextView
            android:id="@+id/watchPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/watchDescription"
            tools:text="A Price" />

        <TextView
            android:id="@+id/watchGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/watchPrice"
            tools:text="A Gender" />

        <TextView
            android:id="@+id/watchSold"
            android:layout_width="333dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/watchGender"
            android:layout_marginTop="-69dp"
            android:gravity="right"
            android:text="@string/ifWatchIsSold"
            android:textColor="@color/red"
            android:textSize="35sp"
            tools:text="Sold" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
